<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>WdigetLib</PackageId>
    <Version>5.0.0</Version>
    <Title>WdigetLib</Title>
    <Authors>dmanning23</Authors>
    <description>A couple of standard widgets for creating tools with the MonoGame based MenuBuddy project</description>
    <PackageProjectUrl>https://github.com/dmanning23/WdigetLib</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/dmanning23/WdigetLib</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>monogame</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.*">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="RenderBuddy" Version="5.*" />
    <PackageReference Include="FilenameBuddy" Version="5.*" />
    <PackageReference Include="MenuBuddy" Version="5.*" />
  </ItemGroup>
</Project>